                                    <input type="checkbox" class="custom-checkbox" data-ignore-toggle
                                        <%=task.isCompleted ? 'checked' : '' %>
                                    <%= isProjectCompleted ? 'disabled' : '' %>
                                        onchange="toggleTask('<%= task.id %>', this.checked)"
