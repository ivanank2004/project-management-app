                                            />
                                </div>

                                <!-- Task Content -->
                                <div class="flex-1 min-w-0">
                                    <div class="flex flex-col gap-3">
                                        <!-- Title and Status Row -->
                                        <div class="flex items-center justify-between gap-2 sm:gap-4 flex-wrap">
                                            <div class="flex items-center gap-3 min-w-0 flex-1">
                                                <!-- Task Number -->
                                                <span
                                                    class="shrink-0 w-8 h-8 flex items-center justify-center rounded-lg bg-gray-100 text-xs font-bold text-gray-600">
                                                    <%= index + 1 %>
                                                </span>

                                                <!-- Task Title -->
                                                <label id="title-<%= task.id %>"
                                                    onclick="toggleDescription('<%= task.id %>')" class="cursor-pointer text-sm sm:text-base font-semibold transition-all
<%= task.isCompleted ? 'line-through text-gray-400' : 'text-gray-900' %>">
                                                    <%= task.nama %>
                                                </label>
                                            </div>

                                            <!-- Status Badge -->
                                            <div class="flex items-center gap-2 shrink-0">
                                                <span id="badge-<%= task.id %>" class="text-xs px-3 py-1.5 rounded-full font-semibold
    <%= task.isCompleted ? 'bg-green-100 text-green-700' : 'bg-yellow-100 text-yellow-700' %>">
                                                    <i data-lucide="<%= task.isCompleted ? 'check-circle-2' : 'clock' %>"
                                                        class="w-3 h-3 inline mr-1"></i>
                                                    <%= task.isCompleted ? 'Selesai' : 'Dalam Proses' %>
                                                </span>

                                                <!-- Actions Dropdown -->
                                                <div class="relative">
                                                    <button onclick="toggleMenu('<%= task.id %>')" data-ignore-toggle
                                                        class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
                                                        <i data-lucide="more-vertical"
                                                            class="w-4 h-4 text-gray-600"></i>
                                                    </button>

                                                    <div id="menu-<%= task.id %>"
                                                        class="hidden absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-100 py-1 z-10">

                                                        <% if (!task.isCompleted) { %>
                                                            <a id="edit-<%= task.id %>"
                                                                href="/projects-page/<%= projectId %>/tasks/<%= task.id %>/edit"
                                                                class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                                                <i data-lucide="edit" class="w-4 h-4"></i>
                                                                Edit
