<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Project Management App - Detail Project
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.3s ease-out;
        }

        .task-hover {
            transition: all 0.2s ease;
        }

        .task-hover:hover {
            transform: translateX(4px);
            box-shadow: 0 4px 12px -4px rgba(0, 0, 0, 0.1);
        }

        .custom-checkbox {
            appearance: none;
            width: 20px;
            height: 20px;
            border: 2px solid #d1d5db;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
            flex-shrink: 0;
        }

        .custom-checkbox:checked {
            background-color: #3b82f6;
            border-color: #3b82f6;
        }

        .custom-checkbox:checked::after {
            content: 'âœ“';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 14px;
            font-weight: bold;
        }

        .custom-checkbox:hover {
            border-color: #3b82f6;
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <div id="successToast" class="hidden fixed top-6 left-1/2 -translate-x-1/2 z-50
           max-w-sm rounded-xl bg-green-600 text-white
           px-5 py-4 shadow-xl flex items-start gap-3 fade-in">
        <i data-lucide="check-circle-2" class="w-6 h-6 mt-0.5"></i>
        <div>
            <p id="successMessage" class="font-semibold"></p>
        </div>
    </div>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
        <div class="mb-8 fade-in">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 sm:gap-6 mb-6">
                <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="p-2 bg-blue-600 rounded-lg">
                            <i data-lucide="check-square" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">
                                <%= projectName %>
                            </h1>
                            <p class="text-sm sm:text-base text-gray-600 mt-1">
                                Tasks
                            </p>
                        </div>
                    </div>
                </div>

                <div class="flex flex-wrap gap-3">
                    <% if (!isProjectCompleted) { %>
                        <a href="/projects-page/<%= projectId %>/tasks/create" class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-5 py-2.5
          text-sm font-semibold text-white shadow-lg shadow-blue-600/30
          transition-all hover:bg-blue-700 active:scale-95">
                            <i data-lucide="plus"></i>
                            Task Baru
                        </a>
                        <% } %>
                            <% if (!isProjectCompleted) { %>
                                <button onclick="confirmCompleteProject()" class="inline-flex items-center gap-2 rounded-lg bg-green-600 px-5 py-2.5
               text-sm font-semibold text-white shadow-lg
               transition-all hover:bg-green-700 active:scale-95">
                                    <i data-lucide="check-circle"></i>
                                    Selesaikan Projek
                                </button>
                                <button onclick="confirmDeleteProject()" class="inline-flex items-center gap-2 rounded-lg bg-red-600 px-5 py-2.5
           text-sm font-semibold text-white shadow-lg shadow-red-600/30
           transition-all hover:bg-red-700 active:scale-95">
                                    <i data-lucide="trash-2"></i>
                                    Hapus Project
                                </button>
                                <% } %>
                                    <a href="/projects-page"
                                        class="inline-flex items-center gap-2 rounded-lg bg-white border-2 border-gray-200 px-5 py-2.5 text-sm font-semibold text-gray-700 transition-all hover:border-blue-200 hover:bg-blue-50 hover:text-blue-600 active:scale-95">
                                        <i data-lucide="arrow-left" class="w-4 h-4"></i>
                                        <span>Kembali ke Projects</span>
                                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 mb-6">
                <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-blue-100 rounded-lg">
                            <i data-lucide="list-checks" class="w-5 h-5 text-blue-600"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Total Tasks</p>
                            <p id="totalTasks" class="text-xl font-bold text-gray-900">
                                <%= tasks.length %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-green-100 rounded-lg">
                            <i data-lucide="check-circle-2" class="w-5 h-5 text-green-600"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Selesai</p>
                            <p id="completedTasks" class="text-xl font-bold text-gray-900">
                                <%= tasks.filter(t=> t.isCompleted).length %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-yellow-100 rounded-lg">
                            <i data-lucide="clock" class="w-5 h-5 text-yellow-600"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Dalam Proses</p>
                            <p id="pendingTasks" class="text-xl font-bold text-gray-900">
                                <%= tasks.filter(t=> !t.isCompleted).length %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-purple-100 rounded-lg">
                            <i data-lucide="trending-up" class="w-5 h-5 text-purple-600"></i>
                        </div>
                        <div>
                            <p class="text-xs text-gray-600">Progress</p>
                            <p id="progressCard" class="text-xl font-bold text-gray-900">
                                <%= tasks.length> 0 ? Math.round((tasks.filter(t => t.isCompleted).length /
                                    tasks.length) * 100) : 0 %>%
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <% if (tasks.length> 0) { %>
                <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-semibold text-gray-700">Progress Keseluruhan</span>
                        <span id="progressText" class="text-sm font-bold text-blue-600">
                            <%= Math.round((tasks.filter(t=> t.isCompleted).length / tasks.length) * 100) %>%
                        </span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                        <div id="progressBar"
                            class="bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded-full transition-all duration-500"
                            style="width: <%= (tasks.filter(t => t.isCompleted).length / tasks.length) * 100 %>%">
                        </div>
                    </div>
                </div>
                <% } %>
        </div>

