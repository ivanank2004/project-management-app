            <div class="fade-in rounded-2xl border-2 border-dashed border-gray-300 bg-white p-12 sm:p-16 text-center">
                <div
                    class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-blue-50 to-blue-100">
                    <i data-lucide="list-checks" class="w-10 h-10 text-blue-600"></i>
                </div>

                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">
                    Belum ada task
                </h3>
                <p class="text-sm sm:text-base text-gray-600 mb-8 max-w-md mx-auto">
                    Mulai produktivitas Anda dengan menambahkan task pertama untuk project ini
                </p>

                <a href="/projects-page/<%= projectId %>/tasks/create"
                    class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-blue-600/30 transition-all hover:bg-blue-700 hover:shadow-xl active:scale-95">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    <span>Buat Task Pertama</span>
                </a>
            </div>
            <% } else { %>

                <div class="space-y-3 fade-in">
                    <% tasks.forEach((task, index)=> { %>
                        <div class="task-hover bg-white rounded-xl shadow-md border p-4 sm:p-5
<%= isProjectCompleted ? 'pointer-events-none opacity-60' : 'cursor-pointer' %>"
                            onclick="onTaskCardClick(event, '<%= task.id %>')">
                            <div class="flex items-start gap-4">
                                <!-- Checkbox -->
