<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.4s ease-out;
        }

        .input-focus:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        .btn-gradient {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            transition: all 0.3s ease;
        }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            transform: translateY(-1px);
        }

        .btn-gradient:active {
            transform: scale(0.98);
        }
    </style>
</head>

<body class="bg-linear-to-br from-gray-50 to-gray-100 min-h-screen">

    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">

        <!-- Header Section -->
        <div class="mb-8 fade-in">
            <div class="flex items-center gap-3 mb-6">
                <a href="/projects-page/<%= projectId %>/tasks"
                    class="p-2 rounded-lg bg-white border-2 border-gray-200 hover:border-blue-200 hover:bg-blue-50 transition-all">
                    <i data-lucide="arrow-left" class="w-5 h-5 text-gray-600"></i>
                </a>
                <div class="flex-1">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-blue-600 rounded-lg">
                            <i data-lucide="edit-3" class="w-6 h-6 text-white"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
                                Edit Task
                            </h1>
                            <p class="text-sm text-gray-600 mt-1">
                                Perbarui detail task untuk project ini
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Form Card -->
        <div class="fade-in" style="animation-delay: 0.1s">
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">

                <!-- Form Header -->
                <div class="bg-linear-to-r from-blue-50 to-blue-100 px-6 sm:px-8 py-6 border-b border-blue-200">
                    <div class="flex items-center gap-3">
                        <div class="p-2 bg-white rounded-lg shadow-sm">
                            <i data-lucide="file-text" class="w-5 h-5 text-blue-600"></i>
                        </div>
                        <div>
                            <h2 class="text-lg font-bold text-gray-900">Detail Task</h2>
                            <p class="text-sm text-gray-600">Ubah informasi task</p>
                        </div>
                    </div>
                </div>

                <!-- Form Body -->
                <form id="editTaskForm" class="p-6 sm:p-8">
                    <div class="space-y-6">

                        <!-- Task Title -->
                        <div>
                            <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                                <i data-lucide="type" class="w-4 h-4 text-gray-500"></i>
                                Judul Task
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input type="text" name="nama" id="nama" required value="<%= task.nama %>"
                                    class="input-focus w-full rounded-lg border-2 border-gray-200 px-4 py-3 text-sm transition-all hover:border-gray-300" />
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <i data-lucide="asterisk" class="w-4 h-4 text-gray-400"></i>
                                </div>
                            </div>
                            <p class="mt-1.5 text-xs text-gray-500 flex items-center gap-1">
                                <i data-lucide="info" class="w-3 h-3"></i>
                                Gunakan judul yang jelas dan deskriptif
                            </p>
                        </div>

                        <!-- Task Description -->
                        <div>
                            <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
                                <i data-lucide="align-left" class="w-4 h-4 text-gray-500"></i>
                                Deskripsi
                                <span class="text-xs font-normal text-gray-500">(Opsional)</span>
                            </label>
                            <textarea name="deskripsi" id="deskripsi" rows="5"
                                placeholder="Tambahkan detail atau catatan tambahan..."
                                class="input-focus w-full rounded-lg border-2 border-gray-200 px-4 py-3 text-sm transition-all hover:border-gray-300 resize-none"><%= task.deskripsi || '' %></textarea>
                            <p class="mt-1.5 text-xs text-gray-500 flex items-center gap-1">
                                <i data-lucide="info" class="w-3 h-3"></i>
                                Detail membantu memahami scope dan requirements task
                            </p>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="flex flex-col sm:flex-row gap-3 justify-between">
                            <a href="/projects-page/<%= projectId %>/tasks"
                                class="inline-flex items-center justify-center gap-2 rounded-lg bg-white border-2 border-gray-200 px-5 py-3 text-sm font-semibold text-gray-700 transition-all hover:border-gray-300 hover:bg-gray-50 active:scale-95">
                                <i data-lucide="x" class="w-4 h-4"></i>
                                <span>Batal</span>
                            </a>

                            <button type="submit"
                                class="btn-gradient inline-flex items-center justify-center gap-2 rounded-lg px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-blue-600/30 hover:shadow-xl hover:shadow-blue-600/40">
                                <i data-lucide="save" class="w-4 h-4"></i>
                                <span>Simpan Perubahan</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 items-center justify-center p-4 z-50">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-6 transform transition-all fade-in">
            <div class="flex items-center gap-3 mb-4">
                <div class="p-2 bg-red-100 rounded-lg">
                    <i data-lucide="alert-triangle" class="w-6 h-6 text-red-600"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-900">Konfirmasi Hapus Task</h3>
            </div>

            <p class="text-sm text-gray-600 mb-4">
                Apakah Anda yakin ingin menghapus task "<span class="font-semibold">
                    <%= task.title %>
                </span>"?
            </p>

            <div class="rounded-lg bg-red-50 border border-red-200 p-3 mb-6">
                <p class="text-sm text-red-800 font-semibold mb-1">⚠️ Peringatan:</p>
                <p class="text-xs text-red-700">Tindakan ini tidak dapat dibatalkan dan task akan hilang permanen.</p>
            </div>

            <div class="flex gap-3">
                <button onclick="closeDeleteModal()"
                    class="flex-1 rounded-lg bg-gray-100 px-4 py-2.5 text-sm font-semibold text-gray-700 transition-all hover:bg-gray-200 active:scale-95">
                    Batal
                </button>
                <form method="POST" action="/projects/<%= projectId %>/tasks/<%= task.id %>?_method=DELETE"
                    class="flex-1">
                    <button type="submit"
                        class="w-full rounded-lg bg-red-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-red-700">
                        Ya, Hapus
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('nama').focus();
        });

        const form = document.getElementById('editTaskForm');

        form.addEventListener('submit', async (e) => {
            e.preventDefault(); // ⛔ stop submit HTML

            const submitBtn = form.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = `
      <i data-lucide="loader-2" class="w-4 h-4 inline mr-2 animate-spin"></i>
      Menyimpan...
    `;
            lucide.createIcons();

            const data = {
                nama: document.getElementById('nama').value,
                deskripsi: document.getElementById('deskripsi').value,
            };

            try {
                const res = await fetch(
                    `/projects/<%= projectId %>/tasks/<%= task.id %>`,
                    {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data),
                    }
                );

                if (!res.ok) throw new Error();

                // redirect manual (karena fetch)
                window.location.href =
                    `/projects-page/<%= projectId %>/tasks?success=task_updated`;

            } catch (err) {
                alert('Gagal memperbarui task');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Simpan Perubahan';
            }
        });
    </script>

</body>

</html>